<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center text-white mb-4">Login</h2>
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card rounded-0">
            <div class="card-header">
              <h3 class="mb-0">Login</h3>
          </div>
          <div class="card-body">
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control rounded-0" %>
            </div>
            <div class="form-group">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off", class:"form-control rounded-0" %>
            </div>
            <div>
              <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
              <% end %>
            <div class="actions" id= "btnLogin">
              <%= f.submit "Log in", class: "btn btn-success btn-lg float-right" %>
            </div>
            <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
<!--/container-->